<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkGreen">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTeamNumberP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/pit_scout_question_1"
        android:id="@+id/pit_scout_question_1"
        android:layout_below="@+id/spinnerTeamNumberP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:textColor="@color/Gold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer_1"
        android:layout_below="@+id/pit_scout_question_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/White"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/pit_scout_question_2"
        android:id="@+id/pit_scout_question_2"
        android:padding="10dp"
        android:textColor="@color/Gold"
        android:layout_below="@+id/answer_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer_2"
        android:layout_below="@+id/pit_scout_question_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/White"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/pit_scout_question_3"
        android:id="@+id/pit_scout_question_3"
        android:padding="10dp"
        android:textColor="@color/Gold"
        android:layout_below="@+id/answer_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer_3"
        android:layout_below="@+id/pit_scout_question_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/White"
        android:padding="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Text"
        android:id="@+id/button_Submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="Submit"/>
</RelativeLayout>